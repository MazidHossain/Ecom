<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEDED"
    tools:context=".ProductDetails">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F50E0E"
        android:padding="15dp"
        android:text="Product Details"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="56dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="312dp"
                android:src="@drawable/prodect_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.086" />

            <TextView
                android:layout_width="49dp"
                android:layout_height="51dp"
                android:background="@drawable/logo_registasion_shape"
                android:text="In Stock"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Title:Facebook Women T-Shirt "
                android:textColor="#000000"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="333dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Prize:$30"
                android:textColor="@color/textColorDark"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="73dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="357dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="359dp" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="34dp"
                android:text="Add To Cart"
                android:textColor="@color/textColorDark"
                android:textAlignment="center"
                android:padding="5dp"

                android:background="@drawable/cart_buton_hsape"
                tools:layout_editor_absoluteX="233dp"
                tools:layout_editor_absoluteY="359dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="412dp"
        android:text="Item Details:"
        android:textSize="20sp"
        android:textColor="@color/textColorDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heigh:"
        android:textColor="@color/textColorDark"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="504dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textColor="@color/textColorDark"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="504dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:textColor="@color/textColorDark"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="504dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Description:"
        android:textColor="@color/textColorDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="542dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="92dp"
        android:layout_marginStart="24dp"
        android:text="The realy good T-shirt and model is good too.
        The realy good T-shirt and model is good too.
        The realy good T-shirt and model is good too. "
        android:textColor="@color/textColorDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:background="@drawable/logo_registasion_shape"
        android:text="Buy"
        android:padding="11dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:translationZ="5dp"
        tools:layout_editor_absoluteX="352dp"
        tools:layout_editor_absoluteY="426dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>